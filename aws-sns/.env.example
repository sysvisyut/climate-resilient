# AWS SNS Configuration
AWS_REGION=eu-north-1
AWS_ACCOUNT_ID=your-account-id

# SNS Topic ARNs (will be populated after setup)
SNS_HEALTH_RISK_TOPIC_ARN=
SNS_RESOURCE_SHORTAGE_TOPIC_ARN=

# Email addresses for notifications
ADMIN_EMAIL_ADDRESSES=admin1@example.com,admin2@example.com
HOSPITAL_EMAIL_ADDRESSES=hospital1@example.com,hospital2@example.com

# SMS numbers (E.164 format, e.g., +1234567890)
ADMIN_SMS_NUMBERS=+1234567890,+9876543210
URGENT_SMS_NUMBERS=+1234567890

# Alert Settings
ENABLE_EMAIL_ALERTS=true
ENABLE_SMS_ALERTS=true
ALERT_MIN_SEVERITY=INFO
SMS_MIN_SEVERITY=CRITICAL
